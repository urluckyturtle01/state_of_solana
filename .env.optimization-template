# Add these to your .env file for optimal AI system performance:

# AI System Optimizations
OPENAI_API_KEY="your_openai_api_key_here"          # Enables semantic search
ENABLE_VECTOR_STORE="true"                         # Enhanced search capabilities
ENABLE_INTELLIGENT_CACHING="true"                  # Smart API caching
CACHE_TTL_MULTIPLIER="1.0"                        # Cache duration multiplier

# Performance Settings  
MAX_CACHE_SIZE="10000"                             # Maximum cache entries
REQUEST_BATCH_SIZE="10"                            # Request batching size
RATE_LIMIT_REQUESTS_PER_MINUTE="100"              # API rate limiting

# Database (Optional for advanced caching)
REDIS_URL="redis://localhost:6379"                # Redis for persistent cache

# Monitoring (Optional)
ENABLE_PERFORMANCE_MONITORING="true"              # Performance analytics
LOG_LEVEL="info"                                   # Logging verbosity